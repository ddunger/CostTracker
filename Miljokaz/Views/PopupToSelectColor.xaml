<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="Miljokaz.Views.PopupToSelectColor"
           CanBeDismissedByTappingOutsideOfPopup="True"
           Size="200, 300">

        <ListView x:Name="myListView" ItemsSource="{Binding DisplayAvailableColors}" SelectedItem="{Binding SelectedColorItem}" Background="White"    ItemTapped="OnItemTapped">
            
        
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Margin="0,10,0,0" >
                            <Label Text="                                            " FontSize="20" MinimumWidthRequest="200" BackgroundColor="{Binding DisplayColor}" MinimumHeightRequest="50"  />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

</mct:Popup>